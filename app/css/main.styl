body
	margin 0
	color #000000
	font-family Monospace
	font-size 13px
	line-height 24px
	overflow hidden
	font-size 10px
	a.opt
		display inline-block
		margin 10px
		border solid 1px #666666
		text-decoration none
		text-align center
		font-size 10px
		padding 0px 5px
		position relative
		z-index 100000

#threeLayer
	display block
	position fixed
	top 0
	left 0
	width 100%
	height 100%

#p5canvas
	position fixed
	top 50%
	left 50%
	transform translateX( -50% ) translateY( -50% )
	background #cdcdcd
	opacity 0
	pointer-events none

#shaper
	poxsition fixed
	top 10px
	left 10px
	background #dedede

#buttons
	display none
	position fixed
	z-index 10000
	padding 20px
	top 0
	left 0
	width calc( 100vw - 40px )
	height calc( 100vh - 40px )
	pointer-events none
	#performance
		position absolute
		bottom 20px
		left 20px
		width 80px
		height 48px
		&>div
			position absolute !important
			left auto !important
			right 0px !important

	button 
		pointer-events auto
		width 70px
		height 21px
		line-height 0px
		margin-right 10px
		&#lorem
			text-transform capitalize !important
		span
			position relative
			top 1px
			pointer-events none
		