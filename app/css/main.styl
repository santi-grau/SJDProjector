body
	margin 0
	color #fff
	font-family Monospace
	font-size 13px
	line-height 24px
	overflow hidden
	a.opt
		display inline-block
		margin 10px
		border solid 1px #666666
		text-decoration none
		text-align center
		font-size 10px
		padding 0px 5px
		position relative
		z-index 100000

#threeLayer
	display block
	position fixed
	top 0
	left 0
	width 100%
	height 100%

#p5canvas
	position fixed
	top 10px
	left 10px
	background #cdcdcd

#shaper
	position fixed
	top 10px
	left 10px
	background #dedede

#debug
	display none
	position fixed
	background rgba(0,0,0,0.8)
	z-index 10000
	padding 20px
	top 0
	left 0
	width calc( 100vw - 40px )
	height calc( 100vh - 40px )